<!DOCTYPE html>
<html lang="en">

<head>
    <title>All Tournaments</title>
    <link rel="stylesheet" href="static/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
</head>

<body>

    <h1>All Tournaments</h1>
    <div class="tournaments" id="tournaments">
        <script type="text/javascript">
            const profiles = {{ tournaments }};
            const container = document.getElementById("tournaments");
            // Appends every profile stored in the database, one by one, and gives them a link.
            profiles.forEach(profile => {
                let link = document.createElement('a');
                link.textContent = profile.replace(/_/g, ' ');
                link.href = "/tournaments/" + profile;
                container.appendChild(link);
            });
        </script>
    </div>
    <a class="new-button" href="/new">Create Tournament</a>
</body>

</html>