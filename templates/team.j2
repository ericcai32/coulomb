<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/static/style.css">
    <title>{{ user }}</title>
</head>

<body>
    <h1>
        {{ user | replace('_', ' ') }}'s History:
    </h1>
    {# <div id="container">
        <form action="/logout" method="post" id="user">
            <br>
            <button name="LOGOUT" value="logout" id="logout">Logout</button>
        </form> #}
    </div>

    <div class="grid-container">
        {% for tournament in participated_events %}
            <div class="grid-item"> <a href="/tournaments/{{tournament}}"> {{tournament | replace('_', ' ') }} </a></div>
            <table>
                <tr>
                    {% for event in tournament_events[tournament] %}
                        <th>{{event | replace('_', ' ') }}</th>
                    {% endfor %}
                </tr>
                <tr>
                    {% for placement in placements[tournament] %}
                        <td>{{placement}}</td>
                    {% endfor %} 
                </tr>
            </table>
        {% endfor %}
    </div>
    <a href="/" class="prof">List of All Tournaments</a>

</body>

</html>

